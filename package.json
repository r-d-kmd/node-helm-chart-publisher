{
  "name": "@kmd/helm-chart-publisher",
  "version": "0.0.0",
  "description": "Scripts for pushing Helm chart to repository in Git",
  "bin": {
    "helm-chart-publisher": "src/index.js"
  },
  "main": "src/index.js",
  "keywords": [
    "helm",
    "charts",
    "kubernetes"
  ],
  "author": "KMD",
  "license": "proprietary",
  "scripts": {
    "read-version-from-git": "VersionFromGit=$(git-tag-version) && npm version $VersionFromGit -no-git-tag-version",
    "lint": "eslint  --ext .js --ext .jsx src & exit 0",
    "start-local-git": "docker stop local-git || true && docker rm local-git || true && docker build --tag local-git:1.0.0 docker/ && docker run --publish 8080:80 --name local-git local-git:1.0.0 &",
    "test": "npm run start-local-git && jest"
  },
  "dependencies": {
    "cosmiconfig": "^5.2.1",
    "del": "^5.0.0",
    "minimist": "^1.2.0",
    "retry": "^0.12.0",
    "simple-git": "^1.124.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@types/jest": "^26.0.15",
    "babel-eslint": "10.1.0",
    "babel-jest": "^26.6.3",
    "eslint": "7.11.0",
    "eslint-config-airbnb-base": "14.2.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.1",
    "git-tag-version": "1.3.1",
    "jest": "^26.6.3",
    "js-yaml": "^3.14.0"
  },
  "files": [
    "src"
  ]
}
